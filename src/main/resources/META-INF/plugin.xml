<idea-plugin>
	<id>AWSL</id>
	<name>AWSL Support</name>
	<vendor>voml</vendor>

	<!-- Product and plugin compatibility requirements -->
	<!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
	<depends>com.intellij.modules.platform</depends>
	<!--    <depends optional="true" config-file="plugin-with-rust.xml">org.rust.lang</depends>-->
	<resource-bundle>messages.AwslBundle</resource-bundle>
	<extensions defaultExtensionNs="com.intellij">
		<fileType name="AWSL" language="AWSL" extensions="awsl;awc;"
		          implementationClass="com.github.awsl_lang.ide.file_types.AwslFileType"
		          fieldName="INSTANCE"
		/>
		<iconProvider implementation="com.github.awsl_lang.ide.file_view.AwslIconProvider"/>
		<projectViewNestingRulesProvider implementation="com.github.awsl_lang.ide.file_view.AwslFileGroup"/>
		<!-- Highlight -->
		<additionalTextAttributes scheme="Default" file="colors/AwslDefault.xml"/>
		<additionalTextAttributes scheme="Darcula" file="colors/AwslDarcula.xml"/>
		<colorSettingsPage implementation="com.github.awsl_lang.ide.highlight.AwslHighlightSetting"/>
		<highlightVisitor implementation="com.github.awsl_lang.ide.highlight.AwslHighlightVisitor"/>
		<lang.syntaxHighlighter
			language="AWSL"
			implementationClass="com.github.awsl_lang.ide.highlight.AwslHighlightToken"
		/>
		<!-- Formatter -->
		<lang.parserDefinition
			language="AWSL"
			implementationClass="com.github.awsl_lang.AwslParserDefinition"
		/>
		<lang.formatter
			language="AWSL"
			implementationClass="com.github.awsl_lang.ide.formatter.AwslFormattingBuilder"
		/>
		<lang.commenter
			language="AWSL"
			implementationClass="com.github.awsl_lang.ide.formatter.JssCommenter"
		/>
		<lang.foldingBuilder
			language="AWSL"
			implementationClass="com.github.awsl_lang.ide.file_view.JssFoldingBuilder"
		/>
		<lang.smartEnterProcessor
			language="AWSL"
			implementationClass="com.github.awsl_lang.ide.formatter.JssSmartEnter"
		/>
		<!-- Document -->
		<!--documentationProvider implementation="com.github.awsl_lang.ide.doc.JssDocumentationExtender"-->
		<psi.referenceContributor
			implementation="com.github.awsl_lang.ide.doc.AwslReferenceContributor"
		/>
		<lang.documentationProvider
			language="AWSL"
			implementationClass="com.github.awsl_lang.ide.doc.JssDocumentationProvider"
		/>

		<lang.braceMatcher
			language="AWSL"
			implementationClass="com.github.awsl_lang.ide.matcher.JssBraceMatcher"
		/>
		<lang.quoteHandler
			language="AWSL"
			implementationClass="com.github.awsl_lang.ide.matcher.JssQuoteHandler"
		/>

		<indexPatternBuilder
			implementation="com.github.awsl_lang.ide.todo.VomlTodoIndexPatternBuilder"
		/>
		<todoIndexer
			filetype="AWSL"
			implementationClass="com.github.awsl_lang.ide.todo.VomlTodoIndexer"
		/>
		<completion.contributor
			language="AWSL"
			implementationClass="com.github.awsl_lang.ide.completion.VomlOptionCompletionContributor"
		/>

		<!--annotator language="JSS" implementationClass="com.github.awsl_lang.ide.annotator.LiteralChecker"-->

		<langCodeStyleSettingsProvider
			implementation="com.github.awsl_lang.ide.formatter.codeStyle.AwslCodeStyleSettingsProvider"
		/>

	</extensions>
	<actions>
		<action id="NewJssFile" class="com.github.awsl_lang.ide.actions.JssCreateFile">
			<add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewHtmlFile"/>
		</action>
		<action id="jss.JssConvertJson"
		        class="com.github.awsl_lang.ide.actions.JssConvertJson"/>
		<group id="jss.JssGenerator" popup="true" text="JssGenerator">
			<reference ref="NewJssFile"/>
			<reference ref="jss.JssConvertJson"/>
			<add-to-group group-id="EditorPopupMenu" anchor="after" relative-to-action="Github.Create.Gist"/>
			<add-to-group group-id="ProjectViewPopupMenu" anchor="after" relative-to-action="Github.Create.Gist"/>
			<add-to-group group-id="EditorTabPopupMenu" anchor="after" relative-to-action="Github.Create.Gist"/>
			<add-to-group group-id="ConsoleEditorPopupMenu" anchor="after" relative-to-action="Github.Create.Gist"/>
		</group>
	</actions>
</idea-plugin>
